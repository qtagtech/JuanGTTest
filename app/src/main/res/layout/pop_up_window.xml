<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center" android:orientation="vertical" android:weightSum="100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/body"
                android:id="@+id/tv_dummy_text"
                android:text="@string/dummy_text"
                android:lineSpacingMultiplier="1.5"
                android:singleLine="false"
                android:textAlignment="center"
                android:layout_width="match_parent" android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_close_popup"
        android:text="@string/btn_close"
        android:layout_height="0dp" android:layout_width="wrap_content"  style="@style/my_button"
        android:imeOptions="actionDone" android:layout_weight="20"/>
</LinearLayout>